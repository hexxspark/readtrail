{
  "plugins": {
    "release-it-pnpm": {}
  },
  "git": {
    "tag": "v${version}",
    "commitMessage": "chore(release): Release ${version}",
    "commit": true,
    "push": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": false,
    "token": "${GITHUB_TOKEN}"
  },
  "changelog": {
    "releaseNotes": "## [${version}] - ${date}\n\n### Added\n${changelog.added}\n\n### Fixed\n${changelog.fixed}\n\n### Changed\n${changelog.changed}\n\n### Misc\n${changelog.misc}"
  },
  "hooks": {
    "before:git:release": "pnpm run build"
  }
}

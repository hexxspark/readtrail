{
  "plugins": {
    "release-it-pnpm": {},
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "git": {
    "tag": "v${version}",
    "commitMessage": "chore(release): Release ${version}",
    "commit": true,
    "push": true
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true,
    "skipChecks": true
  },
  "github": {
    "release": false
  },
  "hooks": {
    "before:git:release": "pnpm run build"
  }
}
